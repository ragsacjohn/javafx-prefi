<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>

<VBox alignment="CENTER" spacing="20.0"
      prefHeight="500.0" prefWidth="400.0"
      xmlns="http://javafx.com/javafx/11.0.14-internal"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="aclcbukidnon.com.javafxactivity.controllers.TrafficLightController">

   <padding>
      <Insets top="20.0" bottom="20.0" left="20.0" right="20.0"/>
   </padding>

   <HBox spacing="20" alignment="CENTER">
      <Circle fx:id="redLight" fill="DARKRED" radius="50.0" stroke="BLACK" strokeType="INSIDE"/>
      <Circle fx:id="yellowLight" fill="GOLDENROD" radius="50.0" stroke="BLACK" strokeType="INSIDE"/>
      <Circle fx:id="greenLight" fill="DARKGREEN" radius="50.0" stroke="BLACK" strokeType="INSIDE"/>
   </HBox>

   <HBox spacing="20" alignment="CENTER">
      <Button fx:id="startButton" text="Start" onAction="#startSimulation"/>
      <Button fx:id="stopButton" text="Stop" onAction="#stopSimulation"/>
   </HBox>
</VBox>
